    }
}

// Function declaration
func say(phrase) {
    print(phrase)
}

say(input("What to say? >> "))


// Recursive functions
func rec(n) {
    if (n equals 0) return 0;
    return n + rec(n - 1);
}

print(rec(3))

// Break and continue statements in loops
while(true) {
    let answer = input(":: what is your age? ");

    if (answer != "22") {
        print(":: Please enter the number 22! ");
        continue;
    }

    print(":: Finally!");
    break;
}
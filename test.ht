let i = 0;

while (true) {
    print("Outer Loop Count: " + i);
    let x = 0;

    while (true) {
        print("\tinner Loop Count: " + x);

        if (x == 3) break;
        x += 1;
    }

    if (i == 5) break;
    i += 1;
}

func myFunction(a, b?, c := "named parameter") {
    print(a);
    print(b);
    print(c);
    return "this is the returned value: " + b;
}

print(myFunction("hello", "world"));

func fib(n := 0) {
    if (n < 2) return n;
    return fib(n - 2) + fib(n - 1);
}

func fact(x) {
    if (x == 0) return 1;
    return x * fact(x - 1);
}

print(2..30 == 2..30);
print(fact(20));

let start = clock();
print(fib(25));
print("Time to complete Fib(25): " + (clock() - start) + " milliseconds.");


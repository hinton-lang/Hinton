let initial = 3;

if (initial == 1 and true) {
    print("Initial equals one!");
} else if (initial == 2) {
    print("Initial equals two!!");
} else if (initial == 3) {
    print("Initial equals three!!");
} else {
    print("Initial equals this value: '" + initial + "'.");
}

let x = 0;

while (x <= 10) {
    print("X equals " + x);
    x = x + 1;
}

print(false ? "value 1" : true ? "value 2" : "value 3");

let a = [1, 1 + 1, ["a", "b", "c", "d"], true, false, null];
print(a);

let b = 1;

print(b--); // 1
print(b);   // 0

print(a[2][b]); // "a"

let i = 0;

while (true) {
    print("Outer Loop Count: " + i);
    let x = 0;

    while (true) {
        print("\tinner Loop Count: " + x);

        if (x == 3) break;
        x++;
    }

    if (i == 5) break;
    i++;
}

func myFunction(a, b?, c := "named parameter") {
    print(a);
    print(b);
    print(c);
    return "this is the returned value: " + b;
}

print(myFunction("hello", "world"));

func fib(n := 0) {
    if (n < 2) return n;
    return fib(n - 2) + fib(n - 1);
}

func fact(x) {
    if (x == 0) return 1;
    return x * fact(x - 1);
}

print(fact(30));
print(fib(25));